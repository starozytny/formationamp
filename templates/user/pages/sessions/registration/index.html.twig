{% extends 'user/pages/sessions/template.html.twig' %}

{% set page_title %}Inscription Ã  {{ elem.formation.name }} {{ elem.start | date('d/m/Y') }} {% endset %}

{% block main_content %}
    {% if error is defined %}
        <div class="main-content">
            <div class="form">
                <div class="alert alert-danger">
                    <span class="icon-information"></span>
                    <p>Veuillez finaliser votre inscription en cours.</p>
                </div>
                <div class="line-buttons">
                    <a href="{{ path('user_profil', {'_fragment': 'profil-orders'}) }}" class="btn btn-primary">Mes paiements</a>
                </div>
            </div>
        </div>
    {% else %}
        <div id="session-registration" data-session="{{ session }}"
             data-workers="{{ workers }}" data-banks="{{ banks }}" data-email="{{ app.user.email }}"
             data-workers-registered="{{ workersRegistered }}">
            {% include "dashboard/layout/components/spinner.html.twig" %}
        </div>
    {% endif %}

{% endblock %}
